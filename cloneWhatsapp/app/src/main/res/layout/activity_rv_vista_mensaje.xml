<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RV_Vista_Mensaje">

    <TextView
        android:id="@+id/mensajeChat"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_sent_message"
        android:padding="12dp"
        android:text="asdasdadasda"
        android:textColor="#070505"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/horaMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="00:00am"
        android:textColor="#803E3C3C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/mensajeChat"
        app:layout_constraintEnd_toEndOf="@+id/mensajeChat"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="@+id/mensajeChat"
        app:layout_constraintTop_toTopOf="@+id/mensajeChat"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>

